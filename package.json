{
  "name": "graphql-base",
  "version": "1.0.0",
  "description": "A starting point for writing serves using Graphql",
  "main": "./src/index.js",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "serve": "nodemon -r dotenv/config ./src/index.ts",
    "typeorn": "typeorm",
    "build": "tsc",
    "lint": "tslint -p tsconfig.json -c tslint.json --fix",
    "prestart": "npm run build",
    "start": "node ./build/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Michel Paupulaire",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/express-graphql": "^0.6.2",
    "@types/helmet": "^0.0.42",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.9.6",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/ws": "^6.0.1",
    "dotenv": "^6.1.0",
    "nodemon": "^1.12.1",
    "sql.js": "^0.5.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.2.1"
  },
  "dependencies": {
    "@mpaupulaire/typegql": "^2.0.0",
    "bcrypt": "3.0.2",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "express": "^4.16.1",
    "express-graphql": "^0.7.1",
    "graphql": "^14.1.1",
    "graphql-iso-date": "^3.3.0",
    "helmet": "^3.15.0",
    "http": "^0.0.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.4",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.12",
    "subscriptions-transport-ws": "^0.9.15",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.9"
  },
  "nodemonConfig": {
    "exec": "ts-node",
    "watch": [
      "src/**/*.ts",
      "src/**/*.gql",
      "src/**/*.json"
    ],
    "events": {
      "start": "node -e 'console.clear()'"
    }
  }
}
